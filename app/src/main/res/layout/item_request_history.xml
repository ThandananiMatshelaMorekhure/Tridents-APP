<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Service Type Icon -->
            <ImageView
                android:id="@+id/iv_service_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_request"
                android:padding="8dp"
                android:background="@drawable/button_outline"
                app:tint="@color/primary_dark" />

            <!-- Service Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_service_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plumbing Service"
                    android:textColor="@color/primary_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_request_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 Oct 2025"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/status_badge_pending"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Problem Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="@color/primary_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_problem_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leaking pipe in the kitchen needs immediate attention"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Urgency -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urgency"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_urgency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textColor="@color/primary_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Preferred Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferred Date"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_preferred_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 Oct 2025"
                    android:textColor="@color/primary_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Contact -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Via"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_contact_preference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="@color/primary_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>